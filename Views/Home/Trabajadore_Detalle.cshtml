@model CrudTrabajadores.Models.ViewModels.TrabajadoreVM
@{
    ViewData["Title"] = "Trabajadore_Detalle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




@if (Model.oTrabajadore.Id == 0)
{
    <h1>Crear trabajador</h1>
}
else
{
    <h1>Editar trabajador</h1>
}





    <div class="row">
        <div class="col-sm-7">
            <form asp-action="Trabajadore_detalle" asp-controller="Home" method="post">
                <input type="hidden" asp-for="oTrabajadore.Id" />

                <div class="mb-2">
                    <label class="form-label" asp-for="oTrabajadore.IdTipo">Tipo Documento</label>
                    <select class="form-select form-select-sm" asp-for="oTrabajadore.IdTipo" asp-items="@Model.oListaTipodocumento">
                        <option selected disabled>--Seleccionar--</option>
                    </select>
                </div>

                <div class="mb-2">
                    <label class="form-label" asp-for="oTrabajadore.NumeroDocumento">Numero Documento</label>
                    <input class="form-control form-control-sm" asp-for="oTrabajadore.NumeroDocumento" type="text" />
                </div>

                <div class="mb-2">
                    <label class="form-label" asp-for="oTrabajadore.Nombres">Nombre completo</label>
                    <input class="form-control form-control-sm" asp-for="oTrabajadore.Nombres" type="text" />
                </div>





                <div class="mb-2">
                    <label class="form-label" asp-for="oTrabajadore.IdSexo">Sexo</label>
                    <select class="form-select form-select-sm" asp-for="oTrabajadore.IdSexo" asp-items="@Model.oListaSexo">
                        <option selected disabled>--Seleccionar--</option>
                    </select>

                @*<div class="form-check">
                    <input class="form-check-input" type="radio" asp-for="oTrabajadore.IdSexo" value="F" id="sexoF">
                    <label class="form-check-label" for="sexoF">F</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" asp-for="oTrabajadore.IdSexo" value="M" id="sexoM">
                    <label class="form-check-label" for="sexoM">M</label>
                </div>*@

                </div>






                <div class="mb-2">
                <label class="form-label"  asp-for="oTrabajadore.IdDepartamento">Departamento</label>
                    <select class="form-select form-select-sm" id="IdDepartamento" asp-for="oTrabajadore.IdDepartamento" asp-items="@Model.oListaDepartamento">
                        <option selected disabled>--Seleccionar--</option>
                    </select>
                </div>

                <div class="mb-2">
                <label class="form-label"  asp-for="oTrabajadore.IdProvincia">Provincia</label>
                    <select class="form-select form-select-sm" id="IdProvincia" asp-for="oTrabajadore.IdProvincia" asp-items="@Model.oListaProvincia">
                        <option selected disabled>--Seleccionar--</option>
                    </select>
                </div>

                <div class="mb-2">
                    <label class="form-label" asp-for="oTrabajadore.IdDistrito">Distrito</label>
                    <select class="form-select form-select-sm" id="IdDistrito" asp-for="oTrabajadore.IdDistrito" asp-items="@Model.oListaDistrito">
                        <option selected disabled>--Seleccionar--</option>
                    </select>
                </div>









                <div class="mb-2">
                    @if (Model.oTrabajadore.Id == 0)
                    {
                        <button class="btn btn-primary btn-sm w-25" type="submit">Crear</button>
                    }
                    else
                    {
                        <button class="btn btn-primary btn-sm w-25" type="submit">Actualizar</button>
                    }
                    <a class="btn btn-dark btn-sm" asp-action="Index" asp-controller="Home">Volver</a>

                </div>





            </form>
        </div>
    </div>



